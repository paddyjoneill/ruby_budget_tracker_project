<br>
<form method="POST" action="/transactions">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="merchant_select">Select Merchant:</label>
      <select name="merchant_id" class="dropdown">
        <% @merchants.each do |merchant| %>
            <option value=<%= merchant.id %>><%= merchant.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="amount">Amount:</label>
      <input type="number" name="amount" id="amount"/>
    </div>

    <div class="form-el">
      <label for="date">Date:</label>
      <input value="<%= Date.today %>" type="date" name="date" id="date"/>
    </div>

    <% if params['is_bill'] != nil %>
      <div class="form-el">
        <label for="end_date">End Date:</label>
        <input value="<%= Date.today %>" type="date" name="end_date" id="end_date"/>
      </div>

      <input type="hidden" id="is_bill" name="is_bill" value="true">
    <% end %>

    <div class="form-el">
      <input type="submit" value="Add Transaction"/>
    </div>

  </div>
</form>
