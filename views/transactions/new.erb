<form method="POST" action="/transactions">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="merchant_select">Select Merchant:</label>
      <select name="merchant_id" id="merchant_select">
        <% @merchants.each do |merchant| %>
            <option value=<%= merchant.id %>><%= merchant.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="category_select">Select Category:</label>
      <select name="category_id" id="category_select">
        <% @categories.each do |category| %>
            <option value=<%= category.id %>><%= category.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="amount">Amount:</label>
      <input type="number" name="amount" id="amount"/>
    </div>

    <div class="form-el">
      <label for="time">Time:</label>
      <input value="12:00" type="time" name="time" id="time"/>
    </div>

    <div class="form-el">
      <label for="date">Date:</label>
      <input value="2019-12-01" type="date" name="date" id="date"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Add Transaction"/>
    </div>

  </div>
</form>
