<form method="POST" action="/categories/<%= @category.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" value="<%= @category.name %>" name="name" id="name"/>
    </div>

    <div class="form-el">
      <label for="category_select">Active:</label>
      <select name="active" id="category_select">
        <option value="true"
        <%= "selected" if @category.active == true %>
        >Active</option>
        <option value="false"
        <%= "selected" if @category.active == false %>
        >Inactive</option>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Category"/>
    </div>

  </div>
</form>
